<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
			label="Id"
		/>
		
		<field
			name="ordering"
			type="hidden"
			label="Order"
		/>

		<field
			name="created"
			type="hidden"
			label="Created"
		/>
		
		<field
			name="name"
			type="text"
			label="Text"
			size="50"
		/>
		
		<field
			name="parent_id"
			type="catelist"
			label="Parent Category"
			description="Parent Category"
			class="inputbox"
		/>
		
		
		<field
			name="desc"
			type="editor"
			label="Description"
			default=""
			filter="safehtml"
		/>
			
		
		<field 
			name="published" 
			type="list" 
			label="Published"
			default="1"
		>
			<option value="1">Published</option>
			<option value="0">UnPublished</option>
		</field>
	</fieldset>
</form>